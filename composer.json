{
  "name": "mattiabasone/confluent-schema-registry-api",
  "description": "A PHP 8.2+ library to consume the Confluent Schema Registry REST API.",
  "minimum-stability": "stable",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Thomas Ploch",
      "email": "thomas.ploch@flixbus.com"
    },
    {
      "name": "Mattia Basone",
      "email": "mattia.basone@gmail.com"
    }
  ],
  "require": {
    "php": "^8.2",
    "ext-curl": "*",
    "ext-json": "*",
    "guzzlehttp/guzzle": "^7.0",
    "guzzlehttp/promises": "^2.0.0",
    "guzzlehttp/psr7": "^2.4",
    "beberlei/assert": "~2.7|~3.0",
    "apache/avro": "dev-main"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "raphhh/trex-reflection": "~1.0",
    "psr/cache": "^1.13|^2.0",
    "symfony/cache": "^6.4|^7.0|^8.0",
    "psr/simple-cache": "^3.0"
  },
  "suggest": {
    "psr/cache": "If you want to use the CacheItemPoolAdapter",
    "psr/simple-cache": "If you want to use the SimpleCacheAdapter"
  },
  "autoload": {
    "psr-4": {
      "FlixTech\\SchemaRegistryApi\\": "src/"
    },
    "files": [
      "src/Requests/Functions.php",
      "src/Constants/Constants.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "FlixTech\\SchemaRegistryApi\\Test\\": "test/"
    }
  }
}
